<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="Presiona el botón EcoMaps."
            android:textSize="20sp"
            android:id="@+id/textView1"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/map"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:gravity="left"
            android:text="Visualizarás el mapa."
            android:textSize="20sp"
            android:id="@+id/textView2"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/icon_mapa"
            android:layout_gravity="center"
            />


        <TextView
            android:layout_width="wrap_content"
            android:gravity="left"
            android:text="Si presionas algún evento, podrás leer la descripción de cada uno de ellos."
            android:textSize="20sp"
            android:id="@+id/textView7"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/icon_tuto1"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:gravity="left"
            android:text="Para agregar una tarea, presiona por algunos segundos el mapa. Se abrirá una nueva ventana, presiona el ícono de la cámara para tomar una foto."
            android:textSize="20sp"
            android:id="@+id/textView3"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/foto_tuto"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:gravity="left"
            android:text="Luego de tomar la foto, completa el resto de los campos y haz click en 'Enviar'."
            android:textSize="20sp"
            android:id="@+id/textView4"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:text="NOTA: Los puntos se visualizarán en el mapa luego de ser aprobados por el supervisor de la App."
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/textView5"
            android:layout_height="wrap_content" />



    </LinearLayout>
</ScrollView>