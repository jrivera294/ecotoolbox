<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="EcoMaps"
            android:textSize="20sp"
            android:id="@+id/textView1"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/map"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="fill_parent"
            android:gravity="left"
            android:text="Presiona unos segundos sobre el mapa para agregar eventos."
            android:textSize="20sp"
            android:id="@+id/textView2"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/tuto1"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="fill_parent"
            android:gravity="left"
            android:text="Se abrirá una nueva ventana, en donde registrarás el evento."
            android:textSize="20sp"
            android:id="@+id/textView3"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/tuto1"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="fill_parent"
            android:gravity="left"
            android:text="Presiona sobre el símbolo de la cámara para tomar una foto."
            android:textSize="20sp"
            android:id="@+id/textView5"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/tuto1"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="fill_parent"
            android:gravity="left"
            android:text="Completa el resto de los campos y luego selecciona 'Enviar'."
            android:textSize="20sp"
            android:id="@+id/textView6"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/tuto1"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="fill_parent"
            android:gravity="left"
            android:text="Presiona los íconos y descubre su contenido."
            android:textSize="20sp"
            android:id="@+id/textView7"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/tuto1"
            android:layout_gravity="center"/>
    </LinearLayout>
</ScrollView>