<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/mapf"
    tools:context=".MapsActivity$PlaceholderFragmentMaps"
    >

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="119dp"
        android:layout_height="119dp"
        android:adjustViewBounds="true"
        android:layout_row="0"
        android:layout_column="0">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombreInfo"
        android:id="@+id/nombreI"
        android:layout_below="@+id/imagen"
        android:layout_alignRight="@+id/descripI"
        android:layout_alignEnd="@+id/descripI"
        android:layout_row="0"
        android:layout_column="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombreInfo"
        android:id="@+id/descripI"
        android:layout_below="@+id/nombreI"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="1"
        android:layout_column="1" />


</GridLayout>