<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Home$PlaceholderFragment"
    android:id="@+id/fragment">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feed"
        android:contentDescription="@string/feed"
        android:layout_marginLeft="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="87dp"
        android:background="@drawable/rss_feed"
        android:clickable="true"
        android:onClick="onClickF"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calculadora"
        android:src="@drawable/cal"
        android:contentDescription="@string/calculadora"
        android:background="@drawable/cal"
        android:layout_alignTop="@+id/feed"
        android:layout_toRightOf="@+id/feed"
        android:layout_toEndOf="@+id/feed"
        android:layout_marginLeft="87dp"
        android:clickable="true"
        android:onClick="onClickC"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uv"
        android:src="@drawable/uv_copy"
        android:contentDescription="uv"
        android:background="@drawable/uv_copy"
        android:layout_toEndOf="@+id/feed"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/feed"
        android:layout_alignStart="@+id/feed"
        android:layout_marginBottom="138dp"
        android:clickable="true"
        android:onClick="onClickUV"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/map"
        android:contentDescription="@string/mapa"
        android:layout_toEndOf="@+id/calculadora"
        android:background="@drawable/map"
        android:layout_alignTop="@+id/uv"
        android:layout_alignLeft="@+id/calculadora"
        android:layout_alignStart="@+id/calculadora"
        android:clickable="true"
        android:onClick="onClickMaps"/>

</RelativeLayout>
